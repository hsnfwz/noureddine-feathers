---
export interface Props {
	title: string;
}

const { title } = Astro.props;

import '@fontsource/montserrat';
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="description" content="Noureddine Feathers" />
		<title>{title}</title>
	</head>
	<body class="font-montserrat">
		<slot />
	</body>
</html>